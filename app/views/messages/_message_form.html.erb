<div class="container">
  <div class="row row-form">

    <%= simple_form_for @message, remote: true do |f, a| %>
      <%= f.error_notification %>
      <div class="col-xs-12 col-md-6 message-form">

        <%= f.fields_for @user do |g| %>
          <div class="row">
            <div class="col-xs-6">
              <%= g.input :first_name, required: true %>
            </div>
            <div class="col-xs-6">
              <%= g.input :last_name, required: true %>
            </div>
          </div>
          <div class="row">
            <div class="col-xs-6">
            <%= g.input :email, required: true %>
            <span  class="error-message" id="message-email-error"></span>
            </div>
            <div class="col-xs-6">
              <%= g.input :phone_number %>
            </div>
          </div>
        <% end %>

        <%= f.input :object, as: :check_boxes, collection: [
          'appointment', 'technical question', 'about my projects', 'other' ] %>
        <%= f.input :content, required: true, label: 'Message' %>
        <span class="error-message" id="message-content-error"></span>
      </div>
      <div class="col-xs-12 col-md-6 appointment-form">
        <div class="close-calendar">
          <p>OK ðŸ‘Œ</p>
        </div>
        <%= f.fields_for @appointment do |e| %>
          <%= e.input :appointment_type, required: true, collection: [
          'phone', 'skype', 'in person', 'other (please add details in your message)' ], id: 'object-form' %>
          <span id="appointment-type-error"></span>
          <%= e.input :date, as: :string, input_html: { class: "datepicker" } %>
        <% end %>
      </div>
      <%= f.button :submit, 'send', class: 'big-button btn-message' %>
    </div>
  <% end %>
</div>

